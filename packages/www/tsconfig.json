{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "strict": false,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs",
      "sourceMap": true
    },
    "include": ["tests/**/*"]
  },
  "exclude": ["node_modules", "**/**/*.stories.tsx", "src/stories"],
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"]
}
