{
  "extends": "../../service-tsconfig.json",
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "commonjs",
      "sourceMap": true
    },
    "include": [
      "tests/**/*"
    ]
  },
  "include": [
    "@types",
    "src"
  ],
  "exclude": [
    "tests"
  ],
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noEmit": true,
    "isolatedModules": true,
    "jsx": "preserve"
  }
}
